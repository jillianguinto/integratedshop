<?xml version="1.0"?>
<config>
   <sections>
        <payment translate="label">
            <label>Payment Methods</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <bpisecurepay translate="label" module="bpisecurepay">
                    <label>BPI Securepay</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>200</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<depends> 
								<active>1</active>
							</depends>
                        </title>
                        
						<enable_testmode translate="label">
                            <label>Is Sandbox mode?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<depends>
								<active>1</active>
							</depends>
                        </enable_testmode>
                       
                        
						<merchant_live translate="label">
                            <label>Merchant</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>		
							<validate>required-entry</validate>
							<depends>
								<enable_testmode>0</enable_testmode>
								<active>1</active>
							</depends>
                        </merchant_live>
                        
						<merchant_accesscode_live translate="label">
                            <label>Access Code</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
							<depends>
								<active>1</active>
								<enable_testmode>0</enable_testmode>
							</depends>
                        </merchant_accesscode_live>
                        
						<merchant_test translate="label">
                            <label>Merchant</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
							<depends>
								<enable_testmode>1</enable_testmode>
								<active>1</active>
							</depends>
                        </merchant_test> 
                        
						<merchant_accesscode_test translate="label">
                            <label>Access Code</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
							<depends>
								<enable_testmode>1</enable_testmode>
								<active>1</active>
							</depends>
                        </merchant_accesscode_test>
                        
                        <merchant_secure_hash_secret_test translate="label">
                            <label>Secure Hash Secret</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
							<depends>
								<enable_testmode>1</enable_testmode>
								<active>1</active>
							</depends>
                        </merchant_secure_hash_secret_test>
                        
                        <merchant_secure_hash_secret_live translate="label">
                            <label>Secure Hash Secret</label>
                            <frontend_type>text</frontend_type> 
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
							<depends>
								<enable_testmode>0</enable_testmode>
								<active>1</active>
							</depends>
                        </merchant_secure_hash_secret_live>              
				
                        <order_status translate="label">
                            <label>New Order Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status_new</source_model>
                            <sort_order>170</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
							<depends>
								<active>1</active>
							</depends>
                        </order_status>
                        
                        <sort_order translate="label">
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>180</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <frontend_class>validate-number</frontend_class>
							<depends>
								<active>1</active>
							</depends>
                        </sort_order>                  
                            
                    </fields>
                </bpisecurepay> 
            </groups>
        </payment>
    </sections>
</config>
