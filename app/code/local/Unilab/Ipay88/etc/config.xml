<config>
	<modules>
		<Unilab_Ipay88>
			<version>1.1.0.0</version>
		</Unilab_Ipay88>
	</modules>
	<global>
		<models>
			<ipay88>
				<class>Unilab_Ipay88_Model</class>
			</ipay88>
		</models>
		<blocks>
			<ipay88>
				<class>Unilab_Ipay88_Block</class>
			</ipay88>
		</blocks>
		<helpers>
			<ipay88>
				<class>Unilab_Ipay88_Helper</class>
			</ipay88>
		</helpers>
		<payment>			
			<groups>
				<offline>Offline Payment Methods</offline>
			</groups>
		</payment>
	</global>
	<default>
		<payment>
			
			<ipay88>
				
				<!-- For API configuration -->
				<enable_testmode>1</enable_testmode>
				<gatewayurl_live><![CDATA[https://payment.ipay88.com.ph/epayment/entry.asp]]></gatewayurl_live>
				<merchant_key_live>SCB2B2C_LIVE</merchant_key_live>
				<merchant_code_live>gbdww</merchant_code_live>
				<gatewayurl_test><![CDATA[https://sandbox.ipay88.com.ph/epayment/entry.asp]]></gatewayurl_test>
				<merchant_key_test>4b3d4qFoFm</merchant_key_test>
				<merchant_code_test>PH00135</merchant_code_test>
				<active>1</active>
				<title>iPay88</title>				
				<order_status>pending</order_status>
				<allowspecific>0</allowspecific>
				<payment_action>authorize</payment_action>
				<model>ipay88/method_payment</model>
				
			</ipay88>
						
		</payment>
	</default>
	<frontend>
		<routers>
			<ipay88>
				<use>standard</use>
				<args>
					<module>Unilab_Ipay88</module>
					<frontName>ipay88</frontName>
				</args>
			</ipay88>
		</routers>
		<layout>
            <updates>
                <ipay88>
                    <file>ipay88.xml</file>
                </ipay88>
            </updates>
        </layout>		
	</frontend>
</config>