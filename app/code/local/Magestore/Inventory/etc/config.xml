    <default>
        <inventory>
            <calculate>
                <cost_type>1</cost_type>
                <supplyneeds_method>1</supplyneeds_method>
            </calculate>
            <general>
                <enable>1</enable>
                <updatestock>1</updatestock>
                <select_warehouse>1</select_warehouse>
            </general>
            <supplier>
                <update_auto>1</update_auto>
                <update_method>last_purchase_order</update_method>
            </supplier>
            <notice>
                <stock_notice>0</stock_notice>
                <qty_notice>1</qty_notice>
                <notice_for>3</notice_for>
                <email_notice>1</email_notice>
                <admin_email></admin_email>
            </notice>
            <top_email><![CDATA[We want to purchase order some product from you. And below are our information and list product that we want to
            purchase.]]>
            </top_email>
            <email_supplier>
                <template>inventory_email_supplier_template</template>
            </email_supplier>
            <email>
                <sendstock_email>inventory_email_sendstock_email</sendstock_email>
                <system_email>inventory_email_system_email</system_email>
                <warehouse_email>inventory_email_warehouse_email</warehouse_email>
            </email>
            <transaction>
                <transaction_notice>1</transaction_notice>
                <cancel_time>30</cancel_time>
            </transaction>
        </inventory>
    </default>
