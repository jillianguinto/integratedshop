        type: 'Post',
        url:'<?php echo Mage::getBaseUrl()?>checkout/cart/addtoCart',
        data: {
            product: product
        },
        }).done(function(data){
            if(data == 'success'){
            $("#prodName").html(productName);    
            var count = $("#item_count").html();
            count = Number(count) + Number(1);
            $("#item_count").html(count);  
            $("#myModal").show();
            }
        });
    });

