/**
 * @var $this Mage_Sales_Block_Order_Totals
 * @see Mage_Sales_Block_Order_Totals
 */
 
 $labelcol = "";
 
?>

<style>
.aright{
	text-align: right !important;
}

</style>

<?php foreach ($this->getTotals() as $_code => $_total): ?>
<?php if($_total->getLabel() == "Insurance"){
			continue;
		}
?>

    <?php if ($_total->getBlockName()): ?>
        <?php echo $this->getChildHtml($_total->getBlockName(), false); ?>
    <?php else:?>
    <tr class="<?php echo $_code?>">
        <td <?php echo $this->getLabelProperties()?> width="600">
            
			<?php if($_total->getLabel() == "Subtotal"){
				$labelcol = "Total Amount:";
			}else if($_total->getLabel() == "Shipping & Handling"){
				$labelcol = "Shipping:";
			}else if($_total->getLabel() == "Insurance"){
				$labelcol = "Insurance:<strong style='color:#F00;'>*</strong>";
			}else if($_total->getLabel() == "Grand Total"){
				$labelcol = "TOTAL";
			}else{
				$labelcol = $_total->getLabel();	
			}
			?>
			
			<?php if ($_total->getStrong()):?>
            <strong><?php echo $labelcol;?></strong>
            <?php else:?>
            <?php echo $labelcol;?>
            <?php endif?>
        </td>
        <td <?php echo $this->getValueProperties()?> width="50" class="aright" text-align= "right">
            <?php if ($_total->getStrong()):?> 
            <strong><?php echo $this->formatValue($_total) ?></strong>
            <?php else:?>
            <?php echo $this->formatValue($_total) ?>
            <?php endif?>
        </td>
    </tr>
	
	
	<?php if($this->escapeHtml($_total->getLabel()) == "Insurance"){?>
	<?php /*	<tr>
		<td colspan="5" class="insurance-note" align="right" style="color:#F00"><?php echo $this->__('*FREE insurance up to Php 2,000.00 of Total Amount. Add on of 1% in excess. ') ?></td>
		</tr>	*/?>
	<?php } ?>

	
    <?php endif?>
<?php endforeach?>
