<script type="text/javascript">
    $('user_create').captcha = new Captcha('http://onlinestore.ecomqa.com/index.php/main2/captcha/refresh/', 'user_create');
     
    function get_browser(){
        var N=navigator.appName, ua=navigator.userAgent, tem;
        var M=ua.match(/(opera|chrome|safari|firefox|msie)\/?\s*(\.?\d+(\.\d+)*)/i);
        if(M && (tem= ua.match(/version\/([\.\d]+)/i))!= null) M[2]= tem[1];
        M=M? [M[1], M[2]]: [N, navigator.appVersion, '-?'];
        return M[0];
    }

    if(get_browser() == 'Safari'){
        jQuery("#captcha-reload").trigger("click");
    }
    var submitForm = new VarienForm('form-validate', true);

    submitForm.submit = function(button, url) { // this is to force the validation upon submit -leandro

        if (this.validator.validate()) {
            var form = this.form;
            var oldUrl = form.action;

            if (url) {
               form.action = url;
            }
            var e = null;
            try {
                this.form.submit();
            } catch (e) {
            }
            this.form.action = oldUrl;
            if (e) {
                throw e;
            }

            if (button && button != 'undefined') {
                button.disabled = true;
            }
        }
    }.bind(submitForm);

//DOM event goes here at document ready - leandro
jQuery(document).ready(function(){
    setTimeout(function(){
        jQuery("#captcha-reload").trigger("click");
    }, 2000);
});

</script>