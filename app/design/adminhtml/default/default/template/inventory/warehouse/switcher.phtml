<?php /* @var $this Mage_Core_Block_Template */?>
<?php if ($warehouses = $this->getWarehouses()): ?>
<p class="switcher"><label for="store_switcher"><?php echo $this->__('Choose Warehouse View:') ?></label>
<select name="store_switcher" id="store_switcher" onchange="return switchWarehouse(this);">
    <option value=""><?php echo $this->getDefaultWarehouseName() ?></option>
    <?php foreach ($warehouses as $warehouseId => $warehouse): ?>
        <option value="<?php echo $this->escapeHtml($warehouseId) ?>"<?php if($warehouseId == $this->getWarehouseId()): ?> selected="selected"<?php endif; ?>>&nbsp;&nbsp;&nbsp;&nbsp;<?php echo $this->escapeHtml($warehouse) ?></option>
    <?php endforeach; ?>
</select>
</p>
<script type="text/javascript">
    function switchWarehouse(obj) {
        var warehouseParam = obj.value ? 'warehouse/' + obj.value + '/' : '';
        if (obj.switchParams) {
            warehouseParam += obj.switchParams;
        }
    <?php if ($this->getUseConfirm()): ?>
        if (confirm("<?php echo $this->__('Please confirm site switching. All data that hasn\'t been saved will be lost.') ?>")) {
            setLocation('<?php echo $this->getSwitchUrl() ?>' + warehouseParam);
            return true;
        } else {
            obj.value = '<?php echo $this->getStoreId() ?>';
        }
        return false;
    <?php else: ?>
        setLocation('<?php echo $this->getSwitchUrl() ?>' + warehouseParam);
    <?php endif; ?>
    }
</script>
<?php endif; ?>
